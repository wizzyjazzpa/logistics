<div class="container my-5">
  <div class="info-card">
    <h4 class="info-title"><i class="fa-solid fa-box me-2"></i>Item General Information</h4>
    
        <% if (getshipments) { %>

          <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-user me-2 text-secondary"></i>Sender's Name:</div>
      <div class="col-md-8 info-value"><%= getshipments.senderName %></div>
    </div>

    <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-envelope me-2 text-secondary"></i>Sender's Email:</div>
      <div class="col-md-8 info-value"><%= getshipments.senderEmail %></div>
    </div>

    <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-user me-2 text-secondary"></i>Receiver's Name:</div>
      <div class="col-md-8 info-value"><%= getshipments.receiverName %></div>
    </div>

    <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-phone me-2 text-secondary"></i>Receiver's Phone:</div>
      <div class="col-md-8 info-value"><%= getshipments.receiverphone%></div>
    </div>

    <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-envelope me-2 text-secondary"></i>Receiver's Email:</div>
      <div class="col-md-8 info-value"><%= getshipments.receiveremail %></div>
    </div>

    <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-location-dot me-2 text-secondary"></i>Receiver's Address:</div>
      <div class="col-md-8 info-value"><%= getshipments.receiverAddress %></div>
    </div>

    <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-barcode me-2 text-secondary"></i>Tracking Number:</div>
      <div class="col-md-8 info-value"><%= getshipments.trackingID %></div>
    </div>

    <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-boxes-stacked me-2 text-secondary"></i>Quantity:</div>
      <div class="col-md-8 info-value"><%= getshipments.quantity %></div>
    </div>


      <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-calendar me-2 text-secondary"></i>Date:</div>
      <div class="col-md-8 info-value"><%= getshipments.created_at %></div>
    </div>

    <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-plane me-2 text-secondary"></i>Shipment Status:</div>
      <div class="col-md-8 info-value"><%= getshipments.status %></div>
    </div>

    <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-weight me-2 text-secondary"></i>Weight (kg):</div>
      <div class="col-md-8 info-value"><%= getshipments.weight %></div>
    </div>

     <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-dollar me-2 text-secondary"></i>Cost Of Delivery:</div>
      <div class="col-md-8 info-value"><%= "$"+getshipments.costOfDelivery.toLocaleString() %></div>
    </div>

    <div class="row info-row">
      <div class="col-md-4 info-label"><i class="fa-solid fa-ship me-2 text-secondary"></i>Delivery Method:</div>
      <div class="col-md-8 info-value"><%= getshipments.deliveryMode %></div>
    </div>

         
        <% }else{ %>
           <p class="alert alert-outline-info">No Shipment Found</p>
        <%}%>
        
  </div>
</div>

 <!-- Shipment Steps Section -->
<div class="destination-wrapper text-center">
  <h4 class="fw-bold mb-5 text-primary">Shipment Destination Progress</h4>

  <div class="row justify-content-center g-4 position-relative">
    
    <div class="col-12 col-sm-6 col-lg-3 step <% if (getshipments.currentLocationValue=="1") { %>
         active
    <% } %>">
      <div class="icon"><i class="fa-solid fa-box"></i></div>
      <p>DISPATCH</p>
           
    </div>

    <div class="col-12 col-sm-6 col-lg-3 step <% if (getshipments.currentLocationValue=="2") { %>
         active
    <% } %>"  >
      <div class="icon"><i class="fa-solid fa-truck"></i></div>
      <p>ON TRANSIT</p>
    </div>

    <div class="col-12 col-sm-6 col-lg-3 step <% if (getshipments.currentLocationValue=="3") { %>
         active
    <% } %>">
      <div class="icon"><i class="fa-solid fa-location-dot"></i></div>
      <p>ARRIVED AT DESTINATION</p>
    </div>

    <div class="col-12 col-sm-6 col-lg-3 step <% if (getshipments.currentLocationValue=="4") { %>
         active
    <% } %>">
      <div class="icon"><i class="fa-solid fa-clipboard-check"></i></div>
      <p>DELIVERED</p>
    </div>
  </div>
</div>

